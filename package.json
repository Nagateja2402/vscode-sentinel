{
  "icon": "assets/hashicorp_logomark.png",
  "name": "sentinel",
  "displayName": "HashiCorp Sentinel",
  "publisher": "hashicorp",
  "description": "Syntax highlighting for HashiCorp Sentinel",
  "version": "0.1.0",
  "license": "MPL-2.0",
  "preview": false,
  "private": true,
  "engines": {
    "vscode": "^1.41.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hashicorp/vscode-sentinel.git"
  },
  "bugs": {
    "url": "https://github.com/hashicorp/vscode-sentinel/issues"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "devops",
    "policy",
    "cloud",
    "sentinel",
    "hcl"
  ],
  "galleryBanner": {
    "color": "#000000",
    "theme": "dark"
  },
  "contributes": {
    "languages": [
      {
        "id": "sentinel",
        "aliases": [
          "HashiCorp Sentinel",
          "sentinel"
        ],
        "extensions": [
          ".sentinel"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "sentinel",
        "scopeName": "source.sentinel",
        "path": "./syntaxes/sentinel.tmlanguage.json"
      }
    ]
  },
  "scripts": {
    "package": "vsce package",
    "test": "npm run test:syntax",
    "test:syntax": "npm run test:grammar && npm run test:snap",
    "test:grammar": "npx vscode-tmgrammar-test -s source.sentinel -g syntaxes/sentinel.tmlanguage.json -t tests/unit/**/*.sentinel",
    "test:snap": "npx vscode-tmgrammar-snap -s source.sentinel -g syntaxes/sentinel.tmlanguage.json -t tests/snapshot/**/*.sentinel"
  },
  "devDependencies": {
    "vsce": "^2.6.6",
    "vscode-tmgrammar-test": "^0.0.11"
  }
}
